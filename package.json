{
  "name": "natural-forms",
  "version": "0.0.1",
  "description": "Unstyled form fields for React with built in validation.",
  "author": "Douglas Moura <douglas.ademoura@gmail.com>",
  "private": true,
  "keywords": [
    "form",
    "input",
    "form validation"
  ],
  "scripts": {
